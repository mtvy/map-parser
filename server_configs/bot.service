[Unit]
Description=Telegram Bot
After=syslog.target
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/map-parser
ExecStart=/usr/bin/python3 /root/map-parser/bot.py
ExecReload=/usr/bin/python3 /root/map-parser/bot.py
RestartSec=10
Restart=always

[Install]
WantedBy=multi-user.target